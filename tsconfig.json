{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@interface/*": ["src/interfaces/*"],
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*", "__tests__/**/*"]
}
